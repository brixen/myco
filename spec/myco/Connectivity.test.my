
BasicSpec {
  id: root
  
  name: "Connectivity"
  tests: con_tests  # TODO: remove and use [tests] as category name
                    #       (category inheritance bug preventing)
  
  root_self: self
  
  [con_tests]
  
  "accesses the null category by the overall id": {
    assert_equal(root, root_self)
    assert_equal(root.tests, self)
  }
  
  "introspects the id itself as a symbol": {
    assert_equal(root.id, :root)
    assert_equal(self.id, :"root.con_tests")
  }
  
  "accesses the null category as its parent": {
    assert_equal(parent, root)
    assert(parent.parent.send("is_a?", FileToplevel))
  }
  
  "accesses its id_scope": {
    assert_equal(id_scope, parent.parent.component)
  }
  
  "uses its id_scope to access instances by id": {
    # TODO: add id_scope.id_get("root")
    assert_equal(id_scope.const_get("id:"root.id"").instance, root)
    assert_equal(id_scope.const_get("id:"id"").instance,      self)
  }
}
