
BasicSpec {
  name: "core/BasicObject"
  
  new_subject: BasicObject {
    var foo: Object { }
  }
  
  [tests]
  
  "var decorator allows cached storage of a value": {
    subject = new_subject
    a = subject.foo
    b = subject.foo
    assert_equal(a, b)
  }
  
  "var decorator also declares a writer meme": {
    subject = new_subject
    a = Object { }
    b = subject.foo
    refute_equal(a, b)
    
    subject.foo = a
    b = subject.foo
    assert_equal(a, b)
  }
  
  "switch returns a Switch with its value set": {
    s = new_subject.switch(88)
    assert_is_a(s, Switch)
    assert_equal(s.value, 88)
  }
}
