
CodeTools::AST << {
  
  StringCompose < Node {
    field array
    
    const is_data: true
    
    bytecode: |g| {
      pos(g)
      
      self.array.each_slice(2) |string, other| {
        g.push_literal(string.value.to_s)
        other && (other.bytecode(g); g.meta_to_s)
      }
      
      g.string_build(self.array.size)
    }
  }
  
}
