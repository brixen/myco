
CodeTools::AST << {
  
  BlockLiteral < Node {
    node_type blklit
    field block
    
    implementation_receiver: ConstantAccess.new(
      loc:      self.loc
      toplevel: true
      names:    [:Ruby, :Proc]
    )
    
    implementation: Invoke.new(
      loc:          self.loc
      receiver:     self.implementation_receiver
      name:         (:new)
      block:        self.block
    )
    
    bytecode: |g| implementation.bytecode(g)
  }
  
}
