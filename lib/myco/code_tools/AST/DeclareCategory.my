
CodeTools::AST << {
  
  DeclareCategory < Node {
    var name, var body
    
    Form: [:category, :name, :body]
    
    scope_implementation: DeclaredScope.new(
      line: self.line
      body: self.body
      scope_method: :set_myco_category
    )
    
    bytecode: |g| {
      pos(g)
      
      g.push_self
        g.push_literal(self.name)
      g.send(:__category__, 1)
      
      scope_implementation.bytecode(g)
    }
  }
  
}
