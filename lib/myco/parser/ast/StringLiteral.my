
CodeTools::AST << {
  
  BuilderMethods << {
    str: |loc, value| StringLiteral.new(
      line:   loc.line
      value: value
    )
  }
  
  StringLiteral < Node, BasicObject {
    var value
    
    to_sexp: [:str, self.value]
    
    bytecode: |g| {
      pos(g)
      
      g.push_literal(self.value)
      g.string_dup
    }
  }
  
}
