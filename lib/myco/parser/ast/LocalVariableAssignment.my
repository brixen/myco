
CodeTools::AST << {
  
  LocalVariableAssignment < Node {
    var name, var value
    var variable # TODO: remove
    
    Form: [:lasgn, :name, :value]
    
    bytecode: |g| {
      var = g.state.scope.assign_local_reference(self)
      
      self.value && self.value.bytecode(g)
      
      pos(g)
      var.set_bytecode(g)
    }
  }
  
}
