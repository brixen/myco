
CodeTools::AST << {
  
  BuilderMethods << {
    lambig: |loc, name| LocalVariableAccessAmbiguous.new(
      line: loc.line
      name: name
    )
  }
  
  LocalVariableAccessAmbiguous < Node, BasicObject {
    var name
    
    to_sexp: [:lambig, self.name]
    
    bytecode: |g| {
      pos(g)
      
      local = g.state.scope.search_local(self.name)
      local &? (
        local.get_bytecode(g)
      ) ?? (
        g.push_self
        g.send(self.name, 0)
      )
    }
  }
  
}
