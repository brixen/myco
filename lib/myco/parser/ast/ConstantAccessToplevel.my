
CodeTools::AST << {
  
  ConstantAccessToplevel < Node, BasicObject {
    var name
    
    Form: [:colon3, :name]
    
    bytecode: |g| {
      pos(g)
      
      g.push_cpath_top
      g.find_const(self.name)
    }
    
    assign_bytecode: |g, value| {
      pos(g)
      
      g.push_cpath_top
      g.push_literal(self.name)
      value.bytecode(g)
    }
  }
}
