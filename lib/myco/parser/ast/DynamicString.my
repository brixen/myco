
CodeTools::AST << {
  
  DynamicString < Node, BasicObject {
    var body
    
    Form: [:dstr, :body]
    
    bytecode: |g| {
      pos(g)
      
      self.body.each_slice(2) |string, other| {
        g.push_literal(string.value)
        other && (other.bytecode(g); g.meta_to_s)
      }
      
      g.string_build(self.body.size)
    }
  }
  
}
