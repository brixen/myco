
::Myco::Object < ::Myco::BasicObject {
  # Send the named signal to this object
  __signal__: |name, *args, &block| {
    decorators.on.signal_handlers(name).each |b| {
      b.result_for(self, *args, &block)
    }
  }
  
  [decorators]
  
  # Register a named signal handler
  var on: Decorator {
    var signal_handlers: Array.new
    
    apply: |meme| signal_handlers(meme.name).push(meme)
    
    [transforms]
    expose: false
  }
}
